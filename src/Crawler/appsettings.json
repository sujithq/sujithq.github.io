{
  "timeframe": "monthly",
  "output": {
    "dataFile": "data/items.jsonl",
    "contentDir": "content/updates2"
  },
  "state": {
    "processedFile": "state/processed.json"
  },
  "fetch": {
    "timeoutSeconds": 20,
    "userAgent": "rss-crawler/1.0",
    "maxAgeDays": 10
  },
  "llm": {
    "provider": "foundry",

    "minCharsToSummarize": 500,
    "github": {
      "model": "openai/gpt-5-mini",
      "baseUrl": "https://models.github.ai/inference/",
      "tokenKey": "MODELS_TOKEN",
      "initialDelaySeconds": 2,
      "maxCallsPerRun": 4
    },
    "openai": {
      "model": "openai/gpt-5-mini",
      "baseUrl": "https://api.openai.com/v1/",
      "tokenKey": "OPENAI_API_KEY",
      "initialDelaySeconds": 2,
      "maxCallsPerRun": 4
    },
    "foundry": {
      "model": "gpt-5.2",
      "baseUrl": "https://projtest-resource.cognitiveservices.azure.com/",
      "tokenKey": "FOUNDRY_API_KEY",
      "initialDelaySeconds": 2,
      "maxCallsPerRun": 200
    }
  },
  "feeds": {
    "dataFile": "feed-config/feeds.json"
  }
}
